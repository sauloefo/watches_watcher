<% content_for :title, "Brands" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Brands</h1>
    <%= link_to "New brand", new_watch_brand_path, class: "btn-cta" %>
  </div>

  <%= turbo_frame_tag "watch_brands" do %>
    <div id="watch_brands" class="min-w-full divide-y divide-gray-200 space-y-5">
      <% if @watch_brands.any? %>
        <% @watch_brands.each do |watch_brand| %>
          <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
            <%= render watch_brand %>
            <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
              <%= link_to "Show", watch_brand, class: "btn", data: { turbo_frame: :_top } %>
              <%= link_to "Edit", edit_watch_brand_path(watch_brand), class: "btn", data: { turbo_frame: :_top } %>
              <%= button_to "Destroy", watch_brand, method: :delete, class: "btn-danger", data: { turbo_confirm: "Are you sure?", turbo_frame: :_top } %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-center my-10">No brands found.</p>
      <% end %>
    </div>

    <div class="join flex-wrap mt-6 mb-12">
      <%= render "country_filter", country: nil %>
      <%= render "country_filter", country: "Switzerland" %>
      <%= render "country_filter", country: "Germany" %>
      <%= render "country_filter", country: "Japan" %>
      <%= render "country_filter", country: "United States" %>
      <%= render "country_filter", country: "France" %>
      <%= render "country_filter", country: "Italy" %>
      <%= render "country_filter", country: "United Kingdom" %>
      <%= render "country_filter", country: "Sweden" %>
      <%= render "country_filter", country: "Finland" %>
      <%= render "country_filter", country: "Denmark" %>
      <%= render "country_filter", country: "Norway" %>
    </div>
  <% end %>
</div>
